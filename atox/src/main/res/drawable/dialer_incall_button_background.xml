<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item
                android:drawable="@drawable/dialer_incall_button_background_checked"
                android:state_selected="true" />
            <item android:drawable="@drawable/dialer_incall_button_background_unchecked" />
        </selector>
    </item>
    <item>
        <ripple android:color="@color/dialer_incall_button_ripple">
            <item
                android:id="@android:id/mask"
                android:gravity="center">
                <shape android:shape="oval">
                    <solid android:color="@android:color/white" />
                </shape>
            </item>
        </ripple>
    </item>
</layer-list>
