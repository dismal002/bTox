<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

        <com.dismal.btox.ui.AvatarImageView
                android:id="@+id/incomingAvatar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="2dp"
                app:shapeAppearanceOverlay="@style/CircleImageView"
                app:statusIndicatorVisible="false"
                app:strokeColor="@null" />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/message_margin"
                android:background="@drawable/msg_bubble_incoming"
                android:minWidth="92dp"
                android:minHeight="40dp"
                android:orientation="vertical"
                android:paddingHorizontal="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="7dp">
            <TextView android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="all"
                    android:gravity="start"
                    android:maxWidth="260dp"
                    android:textColor="@android:color/white"
                    android:textColorLink="@android:color/white"
                    tools:text="Message I received"/>

            <TextView android:id="@+id/timestamp"
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/timestamp_text_incoming"
                    tools:text="2020-12-24"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
